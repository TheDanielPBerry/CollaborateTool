@model CollaborateDataAccessLayer.Board


<div style="border:1px solid gray; background-color:@Model.Color; padding:10px; font-size:1.3em; margin-top:20px;">
    <a href="/Board?id=@Model.IDBoard">@Model.Name</a>


    
    <span style="margin-left:20px; color:black; font-weight:bold; list-style-type:none; font-size:0.8em;">
        @foreach (String teamMember in (ViewBag.TeamList as List<String>))
        {
            <span style="margin:10px; align-self:flex-start;">
                @teamMember
            </span>
        }
    </span>

    @if (Convert.ToInt32(Session["UserID"])==Model.Owner) {
        <span class="glyphicon glyphicon-pencil" style="font-size:1.2em; float:right; cursor:pointer;" onclick="OpenModal('@Url.Action("TeamEdit", "Social", new { boardID = Model.IDBoard })')"></span>
    }
</div>



