@model CollaborateDataAccessLayer.BoardColumn

@using (Ajax.BeginForm("AddColumn", "Board", new AjaxOptions { OnSuccess = "ColumnSuccess(data)" }, htmlAttributes: new { @class = "form-horizontal container" }))
{

    @Html.HiddenFor(model => model.BoardID)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2" })
        @Html.EditorFor(model => model.Name, new { @class = "form-control col-md-5" })

    </div>

    <div class="form-group">
        <input type="submit" value="Add Column" class="btn btn-default" />
    </div>
}


